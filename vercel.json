{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/main.py"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/dist/$1"
    }
  ],
  "framework": "vite",
  "crons": [
    {
      "path": "/api/update",
      "schedule": "0 0 * * *"
    }
  ]
}
